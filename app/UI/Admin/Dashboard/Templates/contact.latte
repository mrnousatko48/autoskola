<!DOCTYPE html>
<html lang="cs">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="preload" href="/css/home.css" as="style">
  <link rel="stylesheet" href="/css/home.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" 
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" 
        crossorigin="anonymous">
  <title>Kontakt - Administrace</title>
</head>
<body>
  <!-- Contact Preview Section -->
  <section id="contact-preview" class="py-4 py-md-5" aria-labelledby="contact-heading">
    <div class="container">
      <h2 id="contact-heading" class="text-center mb-4 fs-3 fs-md-2">Kontaktní informace</h2>
      <p class="mt-3 text-center">
        <a href="{link Dashboard:default}" class="btn btn-secondary btn-lg w-100 w-md-auto" aria-label="Zpět na nástěnku">← Zpět na Nástěnku</a>
      </p>
      <div class="row flex-column flex-md-row gap-3 gap-md-0">
        <div class="col-12 col-md-6 mb-3 mb-md-4">
          <div class="p-3 bg-light rounded shadow-sm">
            <p class="fs-5"><strong>Jméno:</strong> {$contact->name}</p>
            <p class="fs-5"><strong>Adresa:</strong> {$contact->address}</p>
            <p class="fs-5"><strong>IČO:</strong> {$contact->ico}</p>
            <p class="fs-5"><strong>Telefon:</strong> {$contact->phone}</p>
            <p class="fs-5"><strong>Email:</strong> {$contact->email}</p>
          </div>
        </div>
        <div class="col-12 col-md-6 mb-3 mb-md-4">
          <div class="p-3 bg-light rounded shadow-sm">
            <p class="fs-5"><strong>Vložení mapy:</strong></p>
            <div class="ratio ratio-16x9">
              {$contact->map_embed|noescape}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Edit Form for Contact Section -->
  <section class="edit-form py-4 py-md-5" aria-labelledby="edit-contact-heading">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 col-md-8">
          <h2 id="edit-contact-heading" class="mb-4 text-center fs-3 fs-md-2">Upravit kontaktní informace</h2>
          <div class="card shadow-sm p-3">
            <div class="card-body">
              {control contactForm}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</body>
</html>